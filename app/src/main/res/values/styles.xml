<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

    </style>

    <style name="MenuItemRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">#902DA0FF</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

    <!--BUTTON TIMER-->
    <style name="ButtonTimerGreen" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#F44336</item>
        <item name="rd_rippleAnimDuration">250</item>
        <item name="rd_delayClick">none</item>
    </style>
    <style name="ButtonTimerRed" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">@color/colorPrimary</item>
        <item name="rd_rippleAnimDuration">250</item>
        <item name="rd_delayClick">none</item>
    </style>

    <!--TAB-->

    <style  name="TabPageIndicator"  parent="Material.Widget.TabPageIndicator.Light">
        <item name="tpi_tabPadding">12dp</item>
        <item name="tpi_tabRipple">@style/TabRippleStyle</item>
        <item name="tpi_indicatorHeight">3dp</item>
        <item name="tpi_indicatorColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TabTextAppearance</item>
        <item name="tpi_mode">fixed</item>
    </style>

    <style name="TabTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TabRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="android:background">@null</item>
        <item name="rd_rippleColor">#388E3C</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_padding">0dp</item>
    </style>

    <!-- AppBar Style -->

    <style name="AppBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="selectableItemBackground">@null</item>
    </style>

    <!-- Navigator Drawable -->

    <style name="NavigatorDrawableIcon" parent="Material.Drawable.NavigationDrawerIcon">
        <item name="lmd_strokeSize">3dp</item>
        <item name="lmd_padding">18dp</item>
        <item name="lmd_strokeColor">#1B5E20</item>
    </style>

    <style name="NavigationDrawerDrawable">
        <item name="nd_ripple">@style/ToolbarRippleStyle</item>
        <item name="nd_icon">@style/NavigatorDrawableIcon</item>
    </style>

    <style name="ToolbarRippleStyle" parent="Material.Drawable.Ripple.Touch.MatchView.Light">
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_rippleColor">#331B5E20 </item>
    </style>


    <!-- SnackBar Style -->

    <style name="SnackBarSingleLine" parent="Material.Widget.SnackBar.Mobile">
        <item name="sb_text"></item>
        <item name="sb_actionText"></item>
        <item name="sb_duration">0</item>
    </style>

    <style name="SnackBarMultiLine" parent="Material.Widget.SnackBar.Mobile.MultiLine">
        <item name="sb_text"></item>
        <item name="sb_actionText"></item>
        <item name="sb_duration">0</item>
    </style>

    <!-- FloatingActionButton Style -->

    <style name="FloatingWaveColorActionButton" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#33000000</item>
        <item name="fab_backgroundColor">#FF2196F3</item>
        <item name="fab_elevation">4dp</item>
        <item name="rd_delayClick">afterRelease</item>
    </style>

    <!--TimePicker-->
    <style name="TimePickerDialog" parent="Material.App.Dialog.TimePicker.Light">
        <item name="tp_selectionColor">@color/colorAccent</item>
    </style>

    <!--Popup-->
    <style name="MyPopupMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">#0F213F</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>

</resources>
