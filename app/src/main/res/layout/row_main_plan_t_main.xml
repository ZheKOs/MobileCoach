<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:id="@+id/view"
        android:layout_marginBottom="24dp"
        cardview:contentPadding="0dp"
        cardview:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout2"
                android:layout_alignParentBottom="false"
                android:layout_gravity="top">

                <com.rey.material.widget.ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/main_btn_more_plan"
                    android:background="#fffafafa"
                    app:rd_enable="true"
                    app:rd_rippleType="wave"
                    app:rd_rippleColor="#ddd"
                    app:rd_delayClick="afterRelease"
                    android:src="@drawable/dots_vertical_black"
                    android:scaleType="center"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ИМЯ ПЛАНА"
                    android:id="@+id/textViewPlanNamePicked"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_marginLeft="16dp"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_centerVertical="true"
                    android:textSize="17sp" />
            </RelativeLayout>

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:id="@+id/imageView"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:background="#ffdcdcdc"-->
                <!--android:layout_alignParentTop="false"-->
                <!--android:layout_alignWithParentIfMissing="false"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginTop="56dp" />-->


            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_main_workouts"
                android:clipToPadding="false"
                android:choiceMode="none"
                android:listSelector="@android:color/transparent"
                android:smoothScrollbar="false"
                android:scrollbars="none"
                android:minHeight="50dp"
                android:maxHeight="150dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight=".1" />

            <com.rey.material.widget.Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_start_plan_top"
                android:text="СТАРТ"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn"
                android:textColor="#fff"
                app:rd_enable="true"
                app:rd_rippleType="wave"
                app:rd_delayClick="afterRelease"
                app:rd_rippleColor="@color/colorAccentDark"
                app:rd_cornerRadius="3dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>