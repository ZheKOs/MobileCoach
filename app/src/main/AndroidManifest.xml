<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evdokimov.eugene.mobilecoach" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.EditTrainingPlanActivity"
            android:label="EDIT"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.WorkoutActivity"
            android:label="@string/title_activity_workout"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.WatchTrainPlanActivity"
            android:label="@string/title_activity_watch_train_plan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.DishActivity"
            android:label="@string/title_activity_watch_dish" >
        </activity>
        <activity
            android:name=".Activities.AllItemsActivity"
            android:label="@string/title_activity_all_workouts" >
        </activity>
    </application>

</manifest>
