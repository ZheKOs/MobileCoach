<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evdokimov.eugene.mobilecoach" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.EditTrainingPlanActivity"
            android:label="EDIT"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.WorkoutActivity"
            android:label="@string/title_activity_workout"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.WatchTrainPlanActivity"
            android:label="@string/title_activity_watch_train_plan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.DishActivity"
            android:label="@string/title_activity_watch_dish" >
        </activity>
        <activity
            android:name=".Activities.AllItemsActivity"
            android:label="@string/title_activity_all_workouts" >
        </activity>
        <activity
            android:name=".Activities.WorkoutWatchActivity"
            android:label="@string/title_activity_workout_watch" >
        </activity>
        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".Activities.WorkoutEditActivity"
            android:label="@string/title_activity_workout_edit" >
        </activity>
    </application>

</manifest>
